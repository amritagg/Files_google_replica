<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/list_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_list_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/list_image_view"/>

        <TextView
            android:id="@+id/file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            tools:text="com.UCMobile.intl" />

        <ImageView
            android:id="@+id/list_more_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:paddingVertical="10dp"
            android:contentDescription="@string/more" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginStart="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
