<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#757575"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_for_folder"
        android:layout_width="200dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/internal_grid_folder_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_folder_open_24"
            android:padding="8dp"
            android:contentDescription="@string/image" />

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginHorizontal="8dp"
            tools:text="Android" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_for_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/internal_grid_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/image"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/internal_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignEnd="@id/internal_grid_image_view"
            android:layout_margin="8dp"
            tools:text="200KB" />

    </RelativeLayout>

</RelativeLayout>
